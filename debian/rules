#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export DPKG_GENSYMBOLS_CHECK_LEVEL=4

CFLAGS += -D_REENTRANT -pipe

%:
	dh $@ --with autoreconf

override_dh_autoconfigure:
	dh_autoconfigure -- --disable-rpath --with-x --with-tiff --libdir=\$${prefix}/lib/$(DEB_HOST_MULTIARCH)

override_dh_install:
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/annotate
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gd2copypal
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gd2togif
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gd2topng
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gdcmpgif
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gdparttopng
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/gdtopng
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/giftogd2
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/pngtogd
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/pngtogd2
	chrpath -d $(CURDIR)/debian/tmp/usr/bin/webpng
	chrpath -d $(CURDIR)/debian/tmp/usr/lib/x86_64-linux-gnu/libgd.so.3.0.0
	dh_install --fail-missing -Xlibgd.la

override_dh_installdocs:
	dh_installdocs -plibgd2-xpm-dev -plibgd2-noxpm-dev --link-doc=libgd-dev
	dh_installdocs --remaining-packages

override_dh_strip:
	dh_strip --dbg-package=libgd-dbg
